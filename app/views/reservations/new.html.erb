<h1>Make a new reservation at <%= @restaurant.name%></h1>

  <%= @restaurant.address %><br>

  <%= @restaurant.id %>

  <%= form_for [@restaurant, @reservation] do |f| %>



    <p>
      <%= f.label "seats to book" %><br>
      <%= f.number_field "size", value: 2 %>
    </p>

    <p>
      <%= f.label "time" %><br>
      <%= f.time_select "time" %>
    </p>

    <p>
      <%= submit_tag "save", id: "submit", class: "button" %>
    </p>

  <% end %>

