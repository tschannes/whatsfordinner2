<%= form_for @user do |f| %>

  <p>
    <%= f.label "email" %><br>
    <%= f.text_field "email" %>
  </p>

  <p>
    <%= f.label "type of user" %>
    <%= f.select :role, [["Customer","customer"],["Admin","admin"]] %>
  </p>

  <p>
    <%= f.label "password" %><br>
    <%= f.password_field "password" %>
  </p>

  <p>
    <%= f.label "password_confirmation" %><br>
    <%= f.password_field "password_confirmation" %>
  </p>

  <p>
    <%= submit_tag "save", id: "submit", class: "button" %>
  </p>

<% end %>
